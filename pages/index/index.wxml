    <view slot='left' class='btn'> + </view>
    <view slot='right' class='btn' bindtap="loginCmusic"> 登陆 </view>
  </header>
  <view slot="content">
    <scroll config="{{scrollConf}}" class="tab-scroll" bindupdataIndex="updataIndex">
