
  .song-list-wrap{
    height: 100%;
    display: flex;
    box-orient:vertical;
    flex-direction:column;
    background-color: #fff;
    border-top: 1px solid #f8f8f8;
  }
  .song-list-inner{
    flex: 1 1 0;
    position: relative;
  }
  scroll-view{
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }
  .discover-page{
    font-size: 1rem;
  }
  .my-page{
    font-size: 1rem;
  }
  .func-list{
    display: flex;
    padding: .2rem;
    flex: 0 0 auto;
  }
  .func-list>view{
    margin: .2rem;
    flex: 1;
    text-align: center;
    font-size: .7rem;
    padding: .6rem;
    background-color:  #418dcb;
    color: #fff;
    border-radius: .2rem;
  }
  .close-btn{
    position: absolute;
    top: 2rem;
    left: 2rem;
    width: 2rem;
    height: 2rem;
    line-height: 2rem;
    color: #fff;
    text-align: center;
    border-radius: .5rem;
    background-color: #418dcb;
    font-size: .6rem;
  }
